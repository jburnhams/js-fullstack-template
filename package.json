{
  "name": "js-fullstack-template",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "npm run build:frontend",
    "deploy": "wrangler deploy",
    "dev": "wrangler dev",
    "dev:node": "tsx src/server.ts",
    "build:frontend": "vite build --config frontend/vite.config.ts",
    "test": "npm run test:unit-node && npm run test:unit-dom && npm run test:integration && npm run test:browser",
    "test:unit-node": "vitest run --config vitest.config.unit-node.ts",
    "test:unit-dom": "vitest run --config vitest.config.unit-dom.ts",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "test:browser": "playwright test -c playwright.config.ts",
    "test:coverage": "npm run test:coverage:backend && npm run test:coverage:frontend",
    "test:coverage:backend": "vitest run --config vitest.config.backend.ts --coverage",
    "test:coverage:frontend": "vitest run --config vitest.config.frontend.ts --coverage"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "hono": "^4.11.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tsx": "^4.21.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251231.0",
    "@playwright/test": "^1.50.1",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "happy-dom": "^16.3.0",
    "jsdom": "^27.4.0",
    "miniflare": "^4.20251217.0",
    "msw": "^2.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "wrangler": "^4.54.0"
  }
}
